//- Data
include ../data/press_news
//- Mixins
include ../mixins/breadcrumb
include ../mixins/radio
//- Variables
-
	var header_menu_active = "Пресс-центр",
		pagetitle = "Новости"
		ymap = true;

doctype html
html(lang="ru")
	head
		include ../partials/common/head

	body
		include ../partials/common/header

		//- Page head
		.page-head.page-head--gray
			.container
				h1.page-head__title #{pagetitle}
		//- Breadcrumb
		+breadcrumb({
			nav_items: [
				{
					title: header_menu_active,
					url: "press_center.html"
				}
			],
			last_title: pagetitle
		})
		//- Filter panel
		.filter-panel
			.container
				.row
					.filter-panel__l
						.radio-buttons.radio-inline
							+radio({
								name: 'years',
								items: [
									{
										label: 2018,
										checked: true
									},
									{
										label: 2017
									},
									{
										label: 2016
									}
								]
							})
					.filter-panel__r
						.filter-panel__search
							form.search-form
								.search.search--md
									input.search__field(type="text" name="q" placeholder="Поиск")/
									button.search__button(type="submit")
										span.icon.icon-search
		//- Press news
		.press-news.news
			.press-section
				.container
					.section-content
						ul.news-list.wrapper
							each item in news
								li.news-item
									.news-item__date: time #{item.date}
									.news-item__title
										a.news-item__link.link(href="javascript:void(0);") #{item.title}
									p.news-item__descr #{item.descr}
						.press-section__button.text-center
							a.btn.btn-wide.btn-primary(href="javascript:void(0);") Показать еще новости
		//- Map
		include ../partials/map

		include ../partials/common/footer
		include ../partials/common/js