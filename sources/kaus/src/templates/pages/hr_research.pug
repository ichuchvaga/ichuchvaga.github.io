//- Data
include ../data/hr
//- Mixins
include ../mixins/breadcrumb
include ../mixins/radio
//- Variables
-
	var header_menu_active = "Библиотека HR";
	var pagetitle = "Наши исследования";
	var ymap = true;
	var ymap_center = true;
	var tabs_js = true;

doctype html
html(lang="ru")
	head
		include ../partials/common/head

	body
		include ../partials/common/header

		//- Page head
		.page-head.page-head--purple
			.container
				h1.page-head__title #{pagetitle}


		//- Breadcrumb
		+breadcrumb({
			nav_items: [
				{
					title: "Библиотека HR",
					url: "hr.html"
				}
			],
			last_title: "Наши исследования"
		})


		.hr-research-section
			
			//- Filter panel
			.filter-panel
				.container
					.row
						.filter-panel__l
							.radio-buttons.radio-inline
								+radio({
									name: 'years',
									items: [
										{
											label: 2018,
											checked: true
										},
										{
											label: 2017
										},
										{
											label: 2016
										}
									]
								})


						.filter-panel__r
							.filter-panel__search
								form.search-form
									.search.search--md
										input.search__field(type="text" name="q" placeholder="Поиск")/
										button.search__button(type="submit")
											span.icon.icon-search

		
			include ../data/hr_research

			//- Items List
			.hr-research
				.articles-section.section-with-border
					.container
						.articles-list-outer
							ul.articles-list
								each item in articles_array
									//- var cat_url = "javascript:void(0);";
