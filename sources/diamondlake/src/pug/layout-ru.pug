//- Стандартный шаблон страницы
include mixins.pug

block variables
    - var pageClass = '';
    - var lang = 'ru';

doctype html
html(class='page lang-ru no-js ' + pageClass, lang='ru')

    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
        meta(name='format-detection', content='telephone=no')
        meta(name='format-detection', content='date=no')
        meta(name='format-detection', content='address=no')
        meta(name='format-detection', content='email=no')
        meta(content='notranslate', name='google')

        //- Предзагрузка шрифтов или иных ресурсов
        //- link(rel='preload', href='fonts/Bloggersans.woff2', as='font', type='font/woff2', crossorigin='anonymous')

        //- Фавиконки (https://realfavicongenerator.net)
        //- link(rel='apple-touch-icon', sizes='180x180', href='/img/favicon/apple-touch-icon.png')
        //- link(rel='icon', type='image/png', sizes='32x32', href='/img/favicon/favicon-32x32.png')
        //- link(rel='icon', type='image/png', sizes='16x16', href='/img/favicon/favicon-16x16.png')
        //- link(rel='manifest', href='/img/favicon/site.webmanifest')
        //- link(rel='mask-icon', href='/img/favicon/safari-pinned-tab.svg', color='#5bbad5')
        //- meta(name='msapplication-TileColor', content='#5bbad5')
        //- meta(name='theme-color', content='#000')
        //- meta(name='msapplication-navbutton-color', content='#000')
        //- meta(name='apple-mobile-web-app-status-bar-style', content='#000')

        block meta
            title Home

        block head
            - var timestamp = Date.now()
            link(rel='stylesheet', href='css/style.css?v='+timestamp)

        script
            include ../js/head-script.js

    body
        +mini-cart()

        .page__inner
            +page-header('ru')
            +nav-menu-dropdown('ru')
            +main-menu('ru')
            .page__content

                block content

            +page-footer2()

        +modal('modal-studio', 'Запись<br>в студию')
            .modal__body
                +form()
                    +field-text({
                        attrs: {
                            name: 'phone',
                            placeholder: 'Мобильный телефон',
                        }
                    })
                    +field-text({
                        attrs: {
                            name: 'name',
                            placeholder: 'Как вас зовут?',
                        }
                    })
                    +field-text({
                        isTextarea: true,
                        attrs: {
                            name: 'message',
                            placeholder: 'Комментарий',
                        }
                    })
                    +btn('Записаться', 'main', true)(type="submit")

        +modal('modal-product', 'Заказать', 'product')
            .modal__body
                .modal__product-title ES4
                +form()
                    +field-text({
                        attrs: {
                            name: 'phone',
                            placeholder: 'Мобильный телефон',
                        }
                    })
                    +field-text({
                        attrs: {
                            name: 'name',
                            placeholder: 'Как вас зовут?',
                        }
                    })
                    +field-text({
                        isTextarea: true,
                        attrs: {
                            name: 'message',
                            placeholder: 'Комментарий',
                        }
                    })
                    +btn('Записаться', 'main', true)(type="submit")
        +modal('modal-order', 'Заказать', 'product')
            .modal__body
                br
                +form()
                    +field-text({
                        attrs: {
                            name: 'phone',
                            placeholder: 'Мобильный телефон',
                        }
                    })
                    +field-text({
                        attrs: {
                            name: 'name',
                            placeholder: 'Как вас зовут?',
                        }
                    })
                    +field-text({
                        isTextarea: true,
                        attrs: {
                            name: 'message',
                            placeholder: 'Комментарий',
                        }
                    })
                    +btn('Заказать', 'main', true)(type="submit")

        +modal('modal-installment', 'Рассрочка', 'installment')
            .modal__body
                .modal__subtitle В нашей студии вы моежте приобрести ювелирные украшения в рассрочку с первоночальным взносом 0 ₽.
                .modal__installment
                    .modal__installment-row
                        .modal__installment-cell 3 месяца
                        .modal__installment-cell цена 24 000 ₽
                        .modal__installment-cell в месяц 10 000 ₽
                    .modal__installment-row
                        .modal__installment-cell 4 месяца
                        .modal__installment-cell цена 34 000 ₽
                        .modal__installment-cell в месяц 10 000 ₽
                    .modal__installment-row
                        .modal__installment-cell 6 месяца
                        .modal__installment-cell цена 34 000 ₽
                        .modal__installment-cell в месяц 10 000 ₽
                    .modal__installment-row
                        .modal__installment-cell 12 месяца
                        .modal__installment-cell цена 34 000 ₽
                        .modal__installment-cell в месяц 10 000 ₽

                +btn('Консультация Whatsapp', 'main')(href="#").modal__installment-btn

        +modal('modal-success', 'Спасибо за заявку!', 'success')
            .modal__body
                p Мы с вами свяжемся в ближайшее время


        +modal('modal-product-info-color', false, 'product-info')
            img(src="img/modal-product-info-color.png" alt="").modal__image
            .modal__body
                h5.modal__title Цвет бриллианта
                p Цвет бриллианта первый по важности фактор. Система цветовой градации бриллиантов варьируется от D (бесцветный) до Z (заметный коричневый оттенок) по шкале GIA.
                p D-F (Бесцветные): Бриллианты в этом диапазоне считаются бесцветными и являются самыми дорогими. Они выглядят абсолютно белыми и чистыми.
                p G-J (Почти бесцветные): Бриллианты в этом диапазоне считаются почти бесцветными и предлагают отличное сочетание цены и качества.
                +btn('Подробнее', 'main-o')(href="#")

        script.
            document.querySelectorAll('.modal form').forEach(form => {
                form.addEventListener('submit', e => {
                    e.preventDefault();
                    closeAllModals();
                    showModal(document.getElementById('modal-success'));
                });
            });

        block page-bottom
            script(src='js/bundle.js?v='+timestamp)
            script(src='js/jquery-3.2.1.min.js')
            script(src='js/swiper-bundle.min.js')
            script(src='js/custom.js?v='+timestamp)
