        var title = 'Couples wedding <br> rings WB18',
                gallery = [
                    'img/product-2-1.jpg',
                    'img/product-2-2.jpg',
                    'img/product-2-3.jpg',
                    'img/product-2-4.jpg',
                    'img/product-2-1.jpg',
                    'img/product-2-2.jpg',
                    'img/product-2-3.jpg',
                    'img/product-2-4.jpg',
                ],
                price = ['575', '675'],
                breadcrumbs = [
                    {title: 'Home', link: '#'},
                    {title: 'Wedding rings', link: '#'},
                    {title: 'WB18'}
                ];
                galleryText = {
                    women: 'Women’s ring width 5.5 mm',
                    men: 'Men’s ring width 5.5 mm',
