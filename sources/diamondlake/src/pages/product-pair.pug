                    title: 'Металл:',
                    mainOptions: ['585', '750'],
                    optionsDropdown: true,
                    options: [
                        {
                            id: 'wcolor-white',
                            value: 'Белое золото',
                            label: 'Белое золото',
                            mods: 'color-white',
                            contents: '585'
                        },
                        {
                            id: 'wcolor-yellow',
                            value: 'Жёлтое золото',
                            label: 'Жёлтое золото',
                            mods: 'color-yellow',
                            contents: '585'
                        },
                        {
                            id: 'wcolor-pink',
                            value: 'Розовое золото',
                            label: 'Розовое золото',
                            mods: 'color-pink',
                            contents: '585'
                        },
                        {
                            id: 'wcolor-white-yellow',
                            value: 'Комбинированное',
                            label: 'Комбинированное',
                            mods: 'color-white-yellow',
                            contents: '585'
                        },
                    ],
                    mods: 'color',
                    name: 'wcolor',
                    showValue: true,
                }, 'color')

                //-
                    +product-options({
                        title: 'Width:',
                        options: [
                            {
                                id: 'wwidth-0',
                                value: '5.5 mm',
                                label: '5.5',
