            },
            'Принцесса': {
                image: 'img/diamond-shape-princess.png',
                minWidth: 16,
                maxWidth: 30,
            },
            'Груша': {
                image: 'img/diamond-shape-pearl.png',
                minWidth: 24,
                maxWidth: 43,
            },
            'Сердце': {
                image: 'img/diamond-shape-heart.png',
                minWidth: 18,
                maxWidth: 31,
            },
            'Ашер': {
                image: 'img/diamond-shape-asscher.png',
                minWidth: 16,
                maxWidth: 27,
            },
            'Кушон': {
                image: 'img/diamond-shape-cushion.png',
                minWidth: 14,
                maxWidth: 26,
            },
            'Овал': {
                image: 'img/diamond-shape-oval.png',
                minWidth: 23,
                maxWidth: 43,
            },
            'Изумруд': {
                image: 'img/diamond-shape-emerald.png',
                minWidth: 18,
                maxWidth: 37,
            },
        };

        var start = 0.3,
            end = 2.0,
            step = 0.1;

    .guide-carat-vars(data-shapes=JSON.stringify(shapes), data-shape="Круг", data-size=start, data-min=start, data-max=end, data-step=step data-label="карат")
        .guide-carat-vars__image
            img(src="img/diamond-shape-round.png", width=18).guide-carat-vars__stone
        .guide-carat-vars__shapes
            each data, shape in shapes
                .guide-carat-vars__shape
                    input(type="radio", name="guide-carat-shape", value=shape, id="guide-carat-shape-"+shape, checked=(shape === 'Круг'))
                    label(for="guide-carat-shape-"+shape)
                        img(src=data.image)
                        span=shape
        .guide-carat-vars__slider
            +slider([start, end], step)

