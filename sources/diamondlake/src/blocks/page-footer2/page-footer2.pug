//- Все примеси в этом файле должны начинаться c имени блока (page-footer)

mixin page-footer2(mods)

    //- Принимает:
    //-   mods  {string} - список модификаторов
    //- Вызов:
          +page-footer()
            p «Подвал»
    -
        // список модификаторов
        var allMods = '';
        if (typeof (mods) !== 'undefined' && mods) {
            var modsList = mods.split(',');
            for (var i = 0; i < modsList.length; i++) {
                allMods = allMods + ' page-footer--' + modsList[i].trim();
            }
        }

    footer.page-footer2(class=allMods, role='contentinfo')&attributes(attributes)
        .page-footer2__inner.container
            .page-footer2__content
                .page-footer2__phone +7 495 142 67 93
                .page-footer2__address Москва, Большой Тишинский переулок, 8с2
                +social().page-footer2__social
                    +social-link('//vk.com', 'vk')(title='VK')
                        svg(width='24', height='24')
                            use(xlink:href='img/sprite.svg#vk')
                    +social-link('//telegram.org', 'pinterest')(title='telegram')
                        svg(width='24', height='24')
                            use(xlink:href='img/sprite.svg#telegram')
                    +social-link('//whatsapp.com', 'whatsapp')(title='whatsapp')
                        //-svg(width='24', height='24')
                            use(xlink:href='img/sprite.svg#whatsapp')
                        img(src="img/whatsapp.png", width=24, height=24)

                .page-footer2__text
                    p #[a(href="#") Заказать изготовление колец] или другое ювелирное изделие вы можете в соответствующем разделе, либо нажав на бургер-меню в верхнем правом углу сайта.
                    p Информация на сайте не является публичной офертой.
                    //-.page-footer2__copyright 2023 Diamondlake

                    .page-footer2__bottom
                        .page-footer2__bottom-l
                            .page-footer2__copyright 2023 Diamondlake
                        .page-footer2__bottom-r
                            .page-footer2__payment-icons
                                img(src="img/payment-icons.svg" alt="")

            .page-footer2__nav-wrap
                -
                    var footerNav = [
                        {items: [['Помолвочные кольца','Солитер','Акцент','Хало','Трио','Топ 10 Помолвочных']]},
                        {items: [['Обручальные кольца','Парные','Женские','Дорожки','Мужские','Топ 10 Обручальных']]},
                        {items: [['О Бриллиантах','Карат','Цвет','Чистота','Огранка','Флюоресценция','GIA Сертификат']]},
                        {items: [['Украшения на заказ','Гарантии','Как заказать','Доставка','FAQ']]},
                        {items: [['О нас','Производство','Блог','Отзывы','Контакты']]},
                        {items: [['Коллекции','Коллекция «Детки»']]},
                        {items: [['Серьги','Пусеты']]},
                    ]
                each nav in footerNav
                    +page-footer-nav(nav.items, nav.mods)

            .page-footer2__nav-wrap.page-footer2__nav-wrap--mobile
                -
                    var footerNav = [
                        {items: [['Помолвочные кольца','Обручальные кольца','Серьги','Коллекция «Детки»','Украшения на заказ']]},
                        {items: [['Топ 10 Помолвочных','Топ 10 Обручальных','Гарантии','Как заказать','Доставка']]},
                        {items: [['О бриллиантах','Карат','Цвет','Чистота','Огранка','Флуоресценция','GIA сертификат']]},
                        {items: [['О нас','Производство','FAQ','Блог','Отзывы','Контакты']]},
                    ]
                each nav in footerNav
                    +page-footer-nav(nav.items, nav.mods)

                .page-footer2__copyright 2023 Diamondlake


mixin page-footer-nav(items, mods)
    -
        // список модификаторов
        var allMods = '';
        if (typeof (mods) !== 'undefined' && mods) {
            var modsList = mods.split(',');
            for (var i = 0; i < modsList.length; i++) {
                allMods = allMods + ' page-footer__nav--' + modsList[i].trim();
            }
        }
    ul.page-footer2__nav(class=allMods)&attributes(attributes)
        each list in items
            +page-footer-nav-list(list)


mixin page-footer-nav-list(items)
    ul.page-footer2__nav-list
        each item in items
            li.page-footer2__nav-item
                if (['Коллекции', 'Серьги'].includes(item))
                    .page-footer2__nav-title= item
                else
                    a(href="#").page-footer2__nav-link= item