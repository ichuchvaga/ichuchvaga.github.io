//- Все примеси в этом файле должны начинаться c имени блока (news-single)

mixin news-single(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +news-single('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' news-single--' + modsList[i].trim();
      }
    }

  .news-single(class=allMods)&attributes(attributes)
    block
