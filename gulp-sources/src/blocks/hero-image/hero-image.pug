//- Все примеси в этом файле должны начинаться c имени блока (hero-image)

mixin hero-image(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +hero-image('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' hero-image--' + modsList[i].trim();
      }
    }

  .hero-image(class=allMods)&attributes(attributes)
    block